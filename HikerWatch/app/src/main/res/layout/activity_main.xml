<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/unsplash_resize"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:scaleType="fitXY" />

    <TextView
        android:id="@+id/hikersWatchtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_marginStart="135dp"
        android:layout_marginTop="108dp"
        android:text="Hiker's Watch"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hikersWatchtTextView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="31dp"
        android:text="Latitude: 12.33"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latTextView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="31dp"
        android:text="Longtitude: 12.33"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/longTextView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="31dp"
        android:text="Accuracy: 12.33"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/altiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accuracyTextView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="31dp"
        android:text="Altitude: 12.33"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/addrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/altiTextView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="31dp"
        android:text="Address: \n 123 Fake Street \n Fake Town"
        android:textColor="@android:color/background_light" />
</android.widget.RelativeLayout>